.flipContainer
  perspective 1000px
  position relative
  top 100px

  .flip
    transform rotateY(180deg)

  .flipper
    transition .6s
    transform-style preserve-3d
    position relative


    .cardBackg
      overflow hidden
      border-radius 15px

    .backside
      width 100%
      height 100%
      backface-visibility hidden
      position absolute
      top 0
      left 0

    form
      backface-visibility hidden
      padding 25px 15px
      height 270px
      width 430px
      background-color rgba(0, 0, 0, .1)
      input
        font-family "Source Code Pro", sans-serif


  .none
    display none

  .card
        height 100%
        display flex
        flex-direction column
        justify-content space-between
        z-index 2

      .top
          display flex
          justify-content space-between

          .chip
            width 70px
            height 50px

            img
              width 100%
              height 100%

          .cardType
            width 75px
            height 50px

            img
              width 100%
              height 100%

        .middle
          padding 35px 0 15px
          margin-bottom 15px

          input
            padding 2px 10px

        .bottom
          display flex
          flex-direction row
          justify-content space-between

          div
            input
            label
              padding 0 10px

            &:last-of-type
              margin-left 10px
              max-width 110px


    .backside
      transform rotateY(180deg)


.backside
  &:before
    display block
    content ''
    width 100%
    height 20%
    margin-top 30px
    margin-bottom 20px
    background-color rgba(0, 0, 0, 0.9)

  div
    width 94%
    margin auto

    label
      text-align right

    input
      caret-color: transparent;
      padding 0 10px
      color black
      text-align right
      background-color white


input[id='cardNumberOnCard']
  letter-spacing 2px

.backLogo
  display flex
  justify-content flex-end
  align-items flex-end
  div
    width 80px
    height 45px
    margin 50px 0 10px
    img
      width 100%
      height 100%