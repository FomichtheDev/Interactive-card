
.card
  height 270px
  width 430px
  border-radius 15px
  overflow hidden


  form
    padding 25px 15px
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .1)
    display flex
    flex-direction column
    justify-content space-between

    .top
      display flex
      justify-content space-between
      .chip
        width 66px
        height 50px
        img
          width 100%
          height 100%
      .cardType
        width 90px
        height 50px
        img
          width 100%
          height 100%
    .middle
      padding 15px 0
      input
        padding 2px 10px
    .bottom
      display flex
      flex-direction row
      justify-content space-between
      div
        input
        label
            padding 0 10px
        &:last-of-type
          margin-left 10px
          max-width 110px

