.flipContainer
  perspective 1000px
  //&:hover
  //  .flipper
  //    transform rotateY(180deg)
  //    form
  //      display none
  .flipper
    transition .6s
    transform-style preserve-3d
    position relative
    form
      backface-visibility hidden
    .backside
      width 100%
      height 100%
      backface-visibility hidden
      position absolute
      top 0
      left 0
    .card
      z-index 2
    .backside
      transform rotateY(180deg)


.card
  height 270px
  width 430px
  overflow hidden
  border-radius 15px


  form
    padding 25px 15px
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .1)
    display flex
    flex-direction column
    justify-content space-between

    .top
      display flex
      justify-content space-between
      .chip
        width 66px
        height 50px
        img
          width 100%
          height 100%
      .cardType
        width 90px
        height 50px
        img
          width 100%
          height 100%
    .middle
      padding 15px 0
      input
        padding 2px 10px
    .bottom
      display flex
      flex-direction row
      justify-content space-between
      div
        input
        label
            padding 0 10px
        &:last-of-type
          margin-left 10px
          max-width 110px

.backside
  &:before
    display block
    content ''
    width 100%
    height 20%
    margin-top 30px
    margin-bottom 20px
    background-color rgba(0, 0, 0, 0.9)
  div
    width 94%
    margin auto
    label
      text-align right
    input
      caret-color: transparent;
      padding 0 10px
      color black
      text-align right
      background-color white
