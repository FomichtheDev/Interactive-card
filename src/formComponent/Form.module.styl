.main
  width 35%
  margin auto
  background white
  form
    width 100%
    padding 40px 30px
    border 1px solid red
    box-shadow 0 30px 60px 0 rgba(90, 116, 148, 0.4);

.bottomRow
  margin-top 10px
  width 100%
  display flex
  align-content center
  justify-content space-between

.formGroup
  display flex
  align-content center
  flex-direction column
  label
    font-size 14px
    margin-bottom 5px
    font-weight 500
    color #1a3b5d
    width 100%
    display block
    user-select none
    height 18px